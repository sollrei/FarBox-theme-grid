
mixin make_posts(posts)
	for post in posts
		.grid-item
			.post
				.content
					h1.title
						a(href=post.url)= post.title
					.info.clf
						span.date
							i.fa.fa-calendar
							span= post.date.format('%Y-%m-%d')
						span.visitors
							i.fa.fa-bookmark-o
							span= post.visits or 0
						if post.tags
							span.tags
								for tag in post.tags
									a(href="/tag/{{tag}}")= tag
					.post_body= post.content.opening or post.content.limit(200)


if request.args.pjax=='true'
	+make_posts(posts)
else
	extends base
	block title
		title= request.args.s or tags.join('+') or category.title or site.title
	block content
		if request.path.strip('/') == 'category'
			+redirect('/categories')
		else
			.list.clearfix.grid
				.grid-sizer
				+make_posts(posts)
			include include/paginator

			#on_loading.hidden
					i.fa.fa-spinner.fa-spin